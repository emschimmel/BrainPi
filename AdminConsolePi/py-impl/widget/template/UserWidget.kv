<UserWidget>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.8
        Line:
            rectangle: self.x+0.015*self.width, self.y+0.02*self.height, 0.97*self.width, 0.96*self.height
        Color:
            rgba: 1, 1, 1, 0.3
        Rectangle:
            size: 0.976*self.width, 0.96*self.height
            pos: self.x+0.012*self.width, self.y+0.022*self.height


    TabbedPanel:
        padding: 20, 20, 20, 20
        background_color: 1, 1, 1, 0.6
        size_hint: .5, .5
        pos_hint: {'center_x': .5, 'center_y': .5}
        do_default_tab: False

        TabbedPanelItem:
            text: 'Information'

            BoxLayout:
                padding: 20, 20, 20, 20
                orientation: 'vertical'
                size_hint: .9, .7

                BoxLayout:
                    Label:
                        width: 20
                        text: 'Username'
                        font_size: 16
                        halign: 'left'
                    TextInput:
                        id: login
                        multiline:False
                        font_size: 16

                BoxLayout:
                    Label:
                        text: 'Password'
                        halign: 'left'
                        font_size: 16
                    TextInput:
                        id: password
                        multiline:False
                        password:True
                        font_size: 16

                BoxLayout:
                    Label:
                        text: 'Account enabled'
                        halign: 'left'
                        font_size: 16
                    CheckBox:
                        active: root.is_active


        TabbedPanelItem:
            text: 'Modules'